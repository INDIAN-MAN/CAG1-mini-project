<!-- Liquors.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>SG Liquor Store</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">SG Liquor Store</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addLiquor">Add new Liquor</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Liquor Details</h2></div>
        <br>
        <% if (Liquor) { %> <!-- Check if Liquor data exists -->
            <div>
                <p><b>Liquor Type:</b><br> <%= Liquor.type %></p>
                <p><b>Liquor Name:</b><br> <%= Liquor.name %></p>
                <p><b>Liquor Image:</b><br> <img src = "<%= Liquor.image %>" width="20%"></p>
                <p><b>Years:</b><br> <%= Liquor.years %></p>
                <p><b>Price:</b><br> $<%= Liquor.price.toFixed(2) %></p> 
                <p><b>Liquor Quantity:</b><br> <%= Liquor.quantity %></p>

            </div>
        <% } else { %>
            <p>No Liquor found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
